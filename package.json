{
  "name": "rpg-web",
  "private": true,
  "version": "1.0.0-rc",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:check": "vite & vue-tsc --noEmit --watch",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "vue-tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:run",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:docker": "docker-compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "vitest": "^4.0.16",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
